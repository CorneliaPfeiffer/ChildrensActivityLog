<form action="@Url.Action("GetAllChildren", "Child")" method="get">
    <input type="submit" name="submitGetAllChildren" value="Hämta alla barn" /><br />
</form>

<form action="@Url.Action("CountChildren", "Child")" method="get">
    <input type="submit" name="submitCountChildren" value="Räkna alla barn" /><br />
</form>

<form action="@Url.Action("CreateSleepingPeriod", "SleepingPeriod")" method="post">
